<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/main_bg"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/balanceInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:textColor="@color/colorGrey2"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20sp"
        android:text="@string/text_account_balance"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/balanceInfoNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:textColor="@color/colorBlack"
        android:gravity="center_horizontal|center_vertical"
        android:text="200 ₽"
        android:textSize="49sp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balanceInfoText" />
    <TextView
        android:id="@+id/recommendedForPayment"
        android:layout_width="227dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:textStyle="italic"
        android:textColor="@color/colorGrey2"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="14sp"
        android:text="Рекомендуемый платеж: 350 ₽"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balanceInfoNumber"
        tools:layout_editor_absoluteY="127dp"
        tools:layout_editor_absoluteX="38dp" />
    <Button
        android:id="@+id/btnPay"
        android:layout_width="100dp"
        android:layout_height="97dp"
        android:background="@drawable/round_button"
        android:drawableTop="@drawable/coin"
        android:paddingTop="20dp"
        android:text="@string/text_account_fill"
        android:textColor="#fff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/recommendedForPayment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/customerLogin"
        android:layout_width="262dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:textColor="@color/colorGrey2"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:drawableLeft="@drawable/user_acc"
        android:drawableStart="@drawable/user_acc"
        android:textStyle="bold"
        android:text="Петров Петр Петрович"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPay" />
    <TextView
        android:id="@+id/customerAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:paddingLeft="14dp"
        android:textColor="@color/colorGrey2"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="Договор №28366"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerLogin" />
    <TextView
        android:id="@+id/customerAddress"
        android:layout_width="262dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textColor="@color/colorGrey2"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/map"
        android:drawableStart="@drawable/map"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Зеленый 60, 20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerAccount" />
    <TextView
        android:id="@+id/customerInet"
        android:layout_width="262dp"
        android:layout_height="31dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:background="@color/colorWhite"
        android:textColor="@color/colorGrey2"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/shutdown"
        android:drawableStart="@drawable/shutdown"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/text_account_service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerAddress" />
    <TextView
        android:id="@+id/customerTariff"
        android:layout_width="262dp"
        android:layout_height="31dp"
        android:layout_marginTop="-4dp"
        android:paddingLeft="50dp"
        android:ems="10"
        android:background="@color/colorWhite"
        android:textColor="@color/colorGrey2"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="Тариф: Сотрудник"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerInet" />
</android.support.constraint.ConstraintLayout>